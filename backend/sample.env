# === Spring Profiles ===
SPRING_PROFILES_ACTIVE=uat                      # Active Spring profile (e.g. dev, uat, prod)
SERVER_PORT=8080                                # Port on which the Spring Boot app will run

# === Database Configuration ===
DATASOURCE_URL=jdbc:mysql://localhost:3306/db_name   # JDBC URL to connect to MySQL
DATASOURCE_USERNAME=your_mysql_username              # MySQL username
DATASOURCE_PASSWORD=your_mysql_password              # MySQL password

MYSQL_ROOT_PASSWORD=your_mysql_root_password  # Root password for MySQL
MYSQL_DATABASE=pharmacy                             # Name of the database to use

# === Email Configuration ===
SPRING_MAIL_USERNAME=your_email@gmail.com            # Sender email address
SPRING_MAIL_PASSWORD=your_app_password               # App password (not your Gmail login password)

# === JWT Configuration ===
JWT_SECRET=your_jwt_secret_key                       # Secret key for signing JWT tokens
JWT_EXPIRATION=3600                                  # JWT access token expiration time (in seconds)
JWT_RESET_PASSWORD_EXPIRATION=600                    # Expiration time for password reset token (in seconds)
JWT_REFRESH_EXPIRATION=86400                         # JWT refresh token expiration time (in seconds)

# === Default Admin Account ===
DEFAULT_ADMIN_EMAIL=admin@example.com                # Default admin email
DEFAULT_ADMIN_PASSWORD=your_secure_password          # Default admin password

# === VNPay Configuration ===
VNPAY_TMN_CODE=your_vnpay_tmn_code                   # TMN code provided by VNPay
VNPAY_HASH_SECRET=your_vnpay_hash_secret             # Secret key for signing VNPay requests
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html   # VNPay gateway URL (sandbox or live)
VNPAY_RETURN_URL=http://localhost:8080/api/v1/vnpay/return     # URL to handle VNPay return callback

# === Frontend URLs ===
FRONTEND_PAYMENT_RETURN_URL=http://localhost:3001/payment       # Frontend URL for payment result page
FRONTEND_CMS_URL=http://localhost:3000/admin                    # Frontend CMS (admin dashboard) URL
FRONTEND_USER_URL=http://localhost:3001                         # Frontend user site URL
APP_BASE_URL=http://localhost:8080                              # Base URL of the backend API

# === Cloudinary Configuration ===
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>       # Full Cloudinary URL
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name                      # Cloudinary cloud name
CLOUDINARY_API_KEY=your_cloudinary_api_key                            # Cloudinary API key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret                      # Cloudinary API secret
